{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "ğŸ¯ Run Current Test (Headed)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/playwright",
      "args": ["test", "${file}", "--headed"],
      "console": "integratedTerminal",
      "env": {
        "ENV": "test"
      }
    },
    {
      "name": "ğŸ› Debug Current Test",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/playwright",
      "args": ["test", "${file}", "--debug"],
      "console": "integratedTerminal",
      "env": {
        "ENV": "test"
      }
    },
    {
      "name": "â–¶ï¸ Run Current Test (Headless)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/playwright",
      "args": ["test", "${file}"],
      "console": "integratedTerminal",
      "env": {
        "ENV": "test"
      }
    },
    {
      "name": "ğŸ¨ Run Tests (UI Mode)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/playwright",
      "args": ["test", "--ui"],
      "console": "integratedTerminal",
      "env": {
        "ENV": "test"
      }
    },
    {
      "name": "ğŸ”„ Run All Tests (Parallel)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/playwright",
      "args": ["test", "--workers=4"],
      "console": "integratedTerminal",
      "env": {
        "ENV": "test"
      }
    },
    {
      "name": "ğŸ“‹ Run All Tests (Serial)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/playwright",
      "args": ["test", "--workers=1"],
      "console": "integratedTerminal",
      "env": {
        "ENV": "test"
      }
    },
    {
      "name": "ğŸš€ Run with External Launch/Execution IDs",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/playwright",
      "args": ["test", "${file}", "--headed"],
      "console": "integratedTerminal",
      "env": {
        "ENV": "test",
        "LAUNCH_ID": "external_launch_123",
        "EXECUTION_ID": "external_execution_456"
      }
    },
    {
      "name": "ğŸ—ï¸ Run Tests (Staging)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/playwright",
      "args": ["test", "${file}", "--headed"],
      "console": "integratedTerminal",
      "env": {
        "ENV": "staging"
      }
    },
    {
      "name": "ğŸŒ Run Tests (Production)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/playwright",
      "args": ["test", "${file}", "--headed"],
      "console": "integratedTerminal",
      "env": {
        "ENV": "prod"
      }
    }
  ]
}
