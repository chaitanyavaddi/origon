# Environment Configuration
# Copy this file to .env and update with your values

# Application Environment (test, staging, prod)
ENV=test

# Base URLs for different environments
CERTA_TEST_URL=https://ecatest.certaqa.com
CERTA_STAGING_URL=https://staging.certaqa.com
CERTA_PROD_URL=https://app.getcerta.com

# Emit Service (Test Data Management)
EMIT_API_URL=http://emit-alb-1155756710.us-east-1.elb.amazonaws.com/api/v1

# Test Execution IDs (optional - auto-generated if not provided)
# LAUNCH_ID=external_launch_123
# EXECUTION_ID=external_execution_456

# Timeouts (milliseconds)
DEFAULT_TIMEOUT=30000
ACTION_TIMEOUT=10000

# Retry Configuration
TEST_RETRIES=0
TEST_RETRIES_CI=2

# Worker Configuration
TEST_WORKERS=4
TEST_WORKERS_CI=1
